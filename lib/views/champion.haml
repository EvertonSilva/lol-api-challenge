%section{:class => "champion-info"}
  %h1{:class => "page-title"}
    = @champion.name
  %h2{:class => "champion-title"}
    = @champion.title
  %img(src="http://ddragon.leagueoflegends.com/cdn/6.20.1/img/champion/#{@champion.key}.png")
  %section{:class => "champion-items"}
    %h3 Recommended Items
    %div
      - rl = @champion.recommended_list(0)
      %h4= rl.game_map
      - rl.group_items.each do |k, v|
        %div{:class => "item-group"}
          %p= k.capitalize.gsub(/_/, ' ')
          %div{:class => "item-imgs"}
            - v.each do |id|
              %img(src="http://ddragon.leagueoflegends.com/cdn/6.20.1/img/item/#{id}.png")
%section{:class => "champion-lore"}
  %h3 Bio
  %article= @champion.lore

